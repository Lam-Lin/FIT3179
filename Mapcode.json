{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "layer": [
    {
 
      "projection": {"type":"mercator"},
      "data": {
        "url": "https://raw.githubusercontent.com/Lam-Lin/FIT3179/edit/main/Mapcode.json",
        "format": {
          "type": "topojson",
          "feature": "custom"
        }
      },
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Lam-Lin/FIT3179/edit/main/earthquake.csv",
        "format": {
          "type": "csv"
        }
      },
      "mark": { "type": "circle"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {"field": "mag", "type":"quantitative", "scale":{"domain": [4,8]}, "legend": {"title": "Magnitude"}},
        "color": {"field": "depth", "type":"quantitative", "scale": {"scheme": "reds"}, "legend": {"title":"Depth"}}
      }
    }
  ]
}
